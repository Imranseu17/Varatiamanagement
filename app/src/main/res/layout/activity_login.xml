<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="login"
            type="com.example.varatiamanagement.activity.LoginActivity" />

    </data>


<RelativeLayout
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="VectorDrawableCompat"
    android:userId="@+userId/main_layout"
    tools:context=".activity.LoginActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:userId="@+userId/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <android.support.v7.widget.Toolbar
        android:userId="@+userId/bgHeader"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:contentDescription="header"
        android:background="@drawable/header1"/>

    <TextView
        android:userId="@+userId/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="45dp"
        android:text="Welcome to apps"
        android:textColor="@color/colorWhite"
        android:textSize="17sp" />

    <TextView
        android:userId="@+userId/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+userId/tvDesc"
        android:layout_alignLeft="@+userId/tvDesc"
        android:text="Login"
        android:transitionName="login"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:userId="@+userId/circle1"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:transitionName="image"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-100dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/circlet" />

    <ImageView
        android:userId="@+userId/circle2"
        android:layout_width="182dp"
        android:layout_height="182dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-90dp"
        android:layout_marginBottom="-40dp"
        android:src="@drawable/circle" />

    <ImageView
        android:userId="@+userId/circle3"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-50dp"
        android:layout_marginBottom="-60dp"
        android:layout_toLeftOf="@userId/circle2"
        android:src="@drawable/circlet" />

    <ImageView
        android:userId="@+userId/circle4"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_below="@+userId/bgHeader"
        android:layout_marginTop="-130dp"
        android:layout_marginRight="-100dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/circlet" />

    <ScrollView
        android:userId="@+userId/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="50dp">

            <android.support.v7.widget.CardView
                android:userId="@+userId/cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="35dp">

                    <android.support.design.widget.TextInputLayout
                        android:userId="@+userId/input_layout_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_margin="15dp"
                        app:errorEnabled="true">



                        <android.support.design.widget.TextInputEditText
                            android:userId="@+userId/edt_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/ic_call_black_24dp"
                            android:drawablePadding="30dp"
                            android:inputType="number"
                            android:padding="10dp"
                            android:hint="Phone Number"
                            android:background="@drawable/et_ui"
                            android:textColor="@color/colorPurple"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:userId="@+userId/input_layout_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+userId/input_layout_phone"
                        android:layout_margin="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        app:passwordToggleEnabled="true">


                        <android.support.design.widget.TextInputEditText
                            android:userId="@+userId/edt_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_lock"
                            android:drawablePadding="30dp"
                            android:inputType="textPassword"
                            android:padding="10dp"
                            android:hint="Password"
                            android:background="@drawable/et_ui"
                            android:textColor="@color/colorPurple"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>



            <RelativeLayout
                android:userId="@+userId/btn_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+userId/cv"
                android:layout_alignRight="@+userId/cv"
                android:layout_alignBottom="@+userId/cv"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="-20dp"
                android:elevation="10dp">

                <Button
                    android:userId="@+userId/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bt_uisquare"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />

            </RelativeLayout>

            <LinearLayout
                android:userId="@+userId/ll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+userId/btn_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot Your Password?"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text=" | Click Here"/>
            </LinearLayout>
            <TextView
                android:userId="@+userId/tvRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+userId/ll1"
                android:text="Register"/>





        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
</layout>